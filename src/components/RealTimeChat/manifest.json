{
  "displayName": "RealTime Chat",
  "defaultWidth": 400,
  "defaultHeight": 550,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "isShowDataTime",
      "displayName": "Show data and time",
      "type": "boolean",
      "default": true
    },
    {
      "name": "adaloMessages",
      "displayName": "List of Messages",
      "type": "list",
      "hidden": true
    },
    {
      "name": "placeholder",
      "displayName": "Placeholder Text",
      "type": "text"
    },
    {
      "name": "apiKey",
      "global": true,
      "displayName": "Chat GPT API key",
      "type": "text",
      "default": ""
    },
    {
      "name": "threadId",
      "displayName": "ChatGPT Thread id",
      "type": "text",
      "default": ""
    },
    {
      "name": "assistantId",
      "displayName": "ChatGPT Assistant id",
      "type": "text",
      "default": ""
    },
    {
      "name": "fileId",
      "displayName": "File Id",
      "type": "text",
      "default": ""
    },
    {
      "name": "onSend",
      "displayName": "Triggered when messages is sent (update the database!)",
      "type": "action",
      "arguments": [
        {
          "displayName": "Messages",
          "type": "text"
        }
      ]
    },
    {
      "name": "onSendChatGpt",
      "displayName": "Activated when a response comes from the chat gpt (update the database!).",
      "type": "action",
      "arguments": [
        {
          "displayName": "MessagesChatGpt",
          "type": "text"
        }
      ]
    },
    {
      "name": "backgroundColor",
      "displayName": "Background Color",
      "type": "color",
      "default": "#212121"
    }
  ],
  "childComponents": [
    {
      "name": "urlAvatar",
      "displayName": "Avatar",
      "props": [
        {
          "name": "isShowChatUrl",
          "displayName": "Show chat url.",
          "type": "boolean",
          "default": false
        },
        {
          "name": "chatUrl",
          "displayName": "Chat image url.",
          "type": "text",
          "default": "",
          "enabled": {
            "isShowChatUrl": true
          }
        },
        {
          "name": "isShowUserUrl",
          "displayName": "Show user url.",
          "type": "boolean",
          "default": false
        },
        {
          "name": "userUrl",
          "displayName": "User image url.",
          "type": "text",
          "default": "",
          "enabled": {
            "isShowUserUrl": true
          }
        },
        {
          "name": "radiusAvatar",
          "displayName": "Radius Avatar",
          "type": "number",
          "default": 10,
          "control": {
            "type": "slider",
            "min": 1,
            "max": 100
          }
        }
      ]
    },
    {
      "name": "sendButton",
      "displayName": "Send Button",
      "props": [
        {
          "name": "buttonIcon",
          "displayName": "Button Icon",
          "type": "icon",
          "defaultValue": "send"
        },
        {
          "name": "buttonIconColor",
          "displayName": "Button Icon Color",
          "type": "color"
        },
        {
          "name": "showSendingIndicator",
          "displayName": "Show sending indicator",
          "type": "boolean",
          "default": true
        },
        {
          "name": "indicatorColor",
          "displayName": "Indicator Color",
          "type": "color",
          "default": "#808080",
          "enabled": {
            "showSendingIndicator": true
          }
        }
      ]
    },
    {
      "name": "inputStyle",
      "displayName": "Input Styles",
      "props": [
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#424242"
        },
        {
          "name": "textInputColor",
          "displayName": "Text Color",
          "type": "color",
          "default": "#afafaf"
        },
        {
          "name": "borderWidth",
          "displayName": "Border Width",
          "type": "number",
          "default": 1,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "borderRadius",
          "displayName": "Border Radius",
          "type": "number",
          "default": 28,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#303030"
        }
      ]
    },
    {
      "name": "senderChatWindow",
      "displayName": "Sender Chat Style",
      "props": [
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#303030"
        },
        {
          "name": "textColor",
          "displayName": "Text Color",
          "type": "color",
          "default": "#afafaf"
        },
        {
          "name": "textDataColor",
          "displayName": "Text Data Color",
          "type": "color",
          "default": "#808080"
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#424242"
        },
        {
          "name": "fontSize",
          "displayName": "Font Size",
          "type": "number",
          "default": 14,
          "control": {
            "type": "slider",
            "min": 1,
            "max": 100
          }
        },
        {
          "name": "borderWidth",
          "displayName": "Border Width",
          "type": "number",
          "default": 1,
          "control": {
            "type": "slider",
            "min": 1,
            "max": 100
          }
        },
        {
          "name": "borderRadius",
          "displayName": "Border Radius",
          "type": "number",
          "default": 28,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "marginLeft",
          "displayName": "Left Margin",
          "type": "number",
          "default": 5,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "marginRight",
          "displayName": "Right Margin",
          "type": "number",
          "default": 5,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "horizontalPadding",
          "displayName": "Horizontal Padding",
          "type": "number",
          "default": 20,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "vertiacalPadding",
          "displayName": "Vertical Padding",
          "type": "number",
          "default": 10,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        }
      ]
    },
    {
      "name": "receivedChatWindow",
      "displayName": "Receiver Chat Style",
      "props": [
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#303030"
        },
        {
          "name": "textColor",
          "displayName": "Text Color",
          "type": "color",
          "default": "#afafaf"
        },
        {
          "name": "textDataColor",
          "displayName": "Text Data Color",
          "type": "color",
          "default": "#808080"
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#424242"
        },
        {
          "name": "borderWidth",
          "displayName": "Border Width",
          "type": "number",
          "default": 1,
          "control": {
            "type": "slider",
            "min": 1,
            "max": 100
          }
        },
        {
          "name": "fontSize",
          "displayName": "Font Size",
          "type": "number",
          "default": 14,
          "control": {
            "type": "slider",
            "min": 1,
            "max": 100
          }
        },
        {
          "name": "borderRadius",
          "displayName": "Border Radius",
          "type": "number",
          "default": 28,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "marginLeft",
          "displayName": "Left Margin",
          "type": "number",
          "default": 5,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "marginRight",
          "displayName": "Right Margin",
          "type": "number",
          "default": 50,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "horizontalPadding",
          "displayName": "Horizontal Padding",
          "type": "number",
          "default": 20,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        },
        {
          "name": "vertiacalPadding",
          "displayName": "Vertical Padding",
          "type": "number",
          "default": 10,
          "control": {
            "type": "slider",
            "min": 0,
            "max": 100
          }
        }
      ]
    }
  ]
}
